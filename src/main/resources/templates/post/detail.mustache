
{{> /layout/header}}

<!-- 컨테이너 시작 -->
<div class="container mt-3">
    <input type="hidden" id="postId" value="{{postId}}">
    <!-- 상세정보보기 시작 -->
    <div class="mb-3">
        작성자 : <span id="username"></span>
    </div>
    <div class="mb-3 mt-3">
        <h1 id="title"></h1>
    </div>
    <hr />
    <div class="mb-3" id="content">
    </div>
    <div id="auth-bo" style="display: none;"></div>
    <a href="/s/post/1/updateForm" class="btn btn-success">수정</a>
    <button id="btn-delete" class="btn btn-danger">삭제</button>
    <!-- 상세정보보기 끝 -->

         <!-- 댓글 시작 -->

        <div class="card">
            <form action = "/s/post/{{postId}}/comment" method ="post">
                <div class="card-body">
                    <textarea name = "content" class="form-control" rows="1"></textarea>
                </div>
                <div class="card-footer">
                    <button type="submit"  class="btn btn-primary">등록</button>
                </div>
            </form>
        </div>
        <br />

        <div class="card">
            <div class="card-header"><b>댓글 리스트</b></div>
            <ul id="reply-box" class="list-group">

                {{#comments}}
                <li id="reply-1" class="list-group-item d-flex justify-content-between">
                    <div>{{comment.content}}</div>
                    <div class="d-flex">
                        <div class="font-italic">작성자 : {{comment.user.username}}</div>
                        
                   {{#auth}}
                    <button class="badge bg-primary" onclick="deleteComment('{{comment.id}}');">삭제</button>
               {{/auth}}
                    </div>
                </li>
                {{/comments}}
            </ul>
        </div>
        <br />
        <!-- 댓글 끝 -->

</div>
<!-- 컨테이너 끝 -->

<script src="/js/post.js"></script>

<script>

       async function deleteComment(commentId) {
        let response = await fetch(`/s/api/comment/${commentId}`, {
            method: "DELETE"
        });
        let responseParse = await response.json();
        if (responseParse.code == 1) {
            alert("삭제 성공");
            location.reload(); 
        } else {
            alert("삭제 실패");
        }
    }

</script>
{{> /layout/footer}} 